echo -e "${ELECTRIC_BLUE}│ ${GOLD}24${RESET} ${DOUBLE_ARROW} ${WHITE}Torrent Blocking $stsf           ${ELECTRIC_BLUE}│ ${GOLD}30${RESET} ${DOUBLE_ARROW} ${NEON_GREEN}Return to Main Menu         ${ELECTRIC_BLUE}│${RESET}"
echo -e "${ELECTRIC_BLUE}│ ${GOLD}25${RESET} ${DOUBLE_ARROW} ${WHITE}Telegram Bot Service $stsbot     ${ELECTRIC_BLUE}│ ${GOLD}00${RESET} ${DOUBLE_ARROW} ${RED}Exit Application            ${ELECTRIC_BLUE}│${RESET}"
echo -e "${ELECTRIC_BLUE}└──────────────────────────────────┴──────────────────────────────────┘${RESET}"

print_footer

echo -ne "${WHITE}${ARROW} ${NEON_BLUE}Enter your choice ${WHITE}[${GOLD}20-30${WHITE}]: ${RESET}"; read x

case "$x" in
   20)
   clear
   addhost
   echo -ne "\n${NEON_GREEN}${ARROW} ${WHITE}Press ${GOLD}ENTER${WHITE} to return to menu${RESET}"; read
   menu2
   ;;
   21)
   clear
   delhost
   echo -ne "\n${NEON_GREEN}${ARROW} ${WHITE}Press ${GOLD}ENTER${WHITE} to return to menu${RESET}"; read
   menu2
   ;;
   22)
   clear
   reiniciarsistema
   ;;
   23)
   clear
   reiniciarservicos
   sleep 3
   ;;
   24)
   blockt
   ;;
   25)
   botssh
