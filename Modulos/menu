   26)
   clear
   senharoot
   sleep 3
   ;;
   27)
   autoexec
   ;;
   28)
   attscript
   ;;
   29)
   clear
   delscript
   ;;
   30)
   menu
   ;;
   0|00)
   echo -e "${RED}${ARROW} ${WHITE}Shutting down MAPTECH system...${RESET}"
   sleep 2
   clear
   exit;
   ;;
   *)
   echo -e "\n${RED}${CROSS_MARK} ${WHITE}Invalid selection! Please choose a valid option.${RESET}"
   sleep 2
esac
}

# Main Premium Menu
menu() {
while true $x != "ok"
do
stsl=$(ps x | grep "limiter"|grep -v grep > /dev/null && echo -e "${NEON_GREEN}${CHECK_MARK}${RESET}" || echo -e "${RED}${CROSS_MARK}${RESET}")
stsu=$(ps x | grep "udpvpn"|grep -v grep > /dev/null && echo -e "${NEON_GREEN}${CHECK_MARK}${RESET}" || echo -e "${RED}${CROSS_MARK}${RESET}")

print_premium_header
show_premium_system_info

echo -e "${NEON_PURPLE}╔══════════════════════════════════════════════════════════════════════╗${RESET}"
echo -e "${NEON_PURPLE}║${BG_GREEN}${WHITE}                       ${SHIELD} MAIN CONTROL DASHBOARD ${SHIELD}                        ${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}║${BG_GREEN}${WHITE}                         ${STAR} Professional Management ${STAR}                        ${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}╚══════════════════════════════════════════════════════════════════════╝${RESET}"
echo ""

echo -e "${ELECTRIC_BLUE}┌──────────────────────────────────┬──────────────────────────────────┐${RESET}"
echo -e "${ELECTRIC_BLUE}│ ${GOLD}01${RESET} ${DOUBLE_ARROW} ${WHITE}User Creation Center         ${ELECTRIC_BLUE}│ ${GOLD}11${RESET} ${DOUBLE_ARROW} ${WHITE}Network Speed Analysis       ${ELECTRIC_BLUE}│${RESET}"
echo -e "${ELECTRIC_BLUE}│ ${GOLD}02${RESET} ${DOUBLE_ARROW} ${WHITE}Test User Generator          ${ELECTRIC_BLUE}│ ${GOLD}12${RESET} ${DOUBLE_ARROW} ${WHITE}Banner Configuration         ${ELECTRIC_BLUE}│${RESET}"
