# Premium System Information Display
show_premium_system_info() {
    if [[ "$(grep -c "Ubuntu" /etc/issue.net)" = "1" ]]; then
        system=$(cut -d' ' -f1 /etc/issue.net)
        system+=$(echo ' ')
        system+=$(cut -d' ' -f2 /etc/issue.net |awk -F "." '{print $1}')
    elif [[ "$(grep -c "Debian" /etc/issue.net)" = "1" ]]; then
        system=$(cut -d' ' -f1 /etc/issue.net)
        system+=$(echo ' ')
        system+=$(cut -d' ' -f3 /etc/issue.net)
    else
        system=$(cut -d' ' -f1 /etc/issue.net)
    fi
    
    _ons=$(ps -x | grep sshd | grep -v root | grep priv | wc -l)
    [[ "$(cat /etc/VPSManager/Exp)" != "" ]] && _expuser=$(cat /etc/VPSManager/Exp) || _expuser="0"
    [[ -e /etc/openvpn/openvpn-status.log ]] && _onop=$(grep -c "10.8.0" /etc/openvpn/openvpn-status.log) || _onop="0"
    [[ -e /etc/default/dropbear ]] && _drp=$(ps aux | grep dropbear | grep -v grep | wc -l) _ondrp=$(($_drp - 1)) || _ondrp="0"
    _onli=$(($_ons + $_onop + $_ondrp))
    _ram=$(printf ' %-9s' "$(free -h | grep -i mem | awk {'print $2'})")
    _usor=$(printf '%-8s' "$(free -m | awk 'NR==2{printf "%.2f%%", $3*100/$2 }')")
    _usop=$(printf '%-1s' "$(top -bn1 | awk '/Cpu/ { cpu = "" 100 - $8 "%" }; END { print cpu }')")
    _core=$(printf '%-1s' "$(grep -c cpu[0-9] /proc/stat)")
    _system=$(printf '%-14s' "$system")
    _hora=$(printf '%(%H:%M:%S)T')
    _onlin=$(printf '%-5s' "$_onli")
    _userexp=$(printf '%-5s' "$_expuser")
    _tuser=$(awk -F: '$3>=1000 {print $1}' /etc/passwd | grep -v nobody | wc -l)

    echo -e "${ELECTRIC_BLUE}┌─────────────────────────┬─────────────────────────┬─────────────────────────┐${RESET}"
    echo -e "${ELECTRIC_BLUE}│${BG_BLUE}${WHITE} ${GEAR} SYSTEM OVERVIEW        ${RESET}${ELECTRIC_BLUE}│${BG_GREEN}${WHITE} ${SHIELD} MEMORY STATUS          ${RESET}${ELECTRIC_BLUE}│${BG_PURPLE}${WHITE} ${ROCKET} CPU PERFORMANCE        ${RESET}${ELECTRIC_BLUE}│${RESET}"
    echo -e "${ELECTRIC_BLUE}├─────────────────────────┼─────────────────────────┼─────────────────────────┤${RESET}"
    echo -e "${ELECTRIC_BLUE}│${NEON_GREEN} OS: ${WHITE}$_system      ${ELECTRIC_BLUE}│${NEON_GREEN} Total: ${WHITE}$_ram       ${ELECTRIC_BLUE}│${NEON_GREEN} Cores: ${WHITE}$_core            ${ELECTRIC_BLUE}│${RESET}"
    echo -e "${ELECTRIC_BLUE}│${GOLD} Uptime: ${WHITE}$_hora     ${ELECTRIC_BLUE}│${GOLD} Usage: ${WHITE}$_usor       ${ELECTRIC_BLUE}│${GOLD} Load: ${WHITE}$_usop           ${ELECTRIC_BLUE}│${RESET}"
    echo -e "${ELECTRIC_BLUE}└─────────────────────────┴─────────────────────────┴─────────────────────────┘${RESET}"
    echo ""
    
    # Premium User Statistics with Visual Indicators
    [[ ! -e /tmp/att ]]  && {
        echo -e "${NEON_GREEN}${DIAMOND} ${WHITE}Active Connections: ${NEON_GREEN}$_onlin   ${NEON_PINK}${DIAMOND} ${WHITE}Expired Users: ${RED}$_userexp   ${GOLD}${DIAMOND} ${WHITE}Total Users: ${YELLOW}$_tuser${RESET}"
        var01="${WHITE}${STAR}${RESET}"
    } || {
        echo -e "${BLINK}${GOLD}${FIRE} ${RED}CRITICAL UPDATE AVAILABLE! ${FIRE} ${WHITE}System requires immediate attention ${FIRE}${RESET}"
        var01="${BLINK}${NEON_GREEN}${FIRE}${RESET}"
    }
    echo ""
}

# Premium Network Speed Test
velocity () {
aguarde () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
[[ ! -d /etc/VPSManager ]] && rm -rf /bin/menu
${comando[0]} > /dev/null 2>&1
${comando[1]} > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "  ${NEON_BLUE}${GLOBE} ${WHITE}Analyzing Network Performance ${NEON_PURPLE}${DOUBLE_ARROW} ${CYAN}["
while true; do
   for((i=0; i<30; i++)); do
   echo -ne "${NEON_GREEN}█"
   sleep 0.06s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "${CYAN}]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "  ${NEON_BLUE}${GLOBE} ${WHITE}Analyzing Network Performance ${NEON_PURPLE}${DOUBLE_ARROW} ${CYAN}["
done
echo -e "${CYAN}] ${NEON_GREEN}${CHECK_MARK} ${WHITE}ANALYSIS COMPLETE${RESET}"
tput cnorm
}
fun_tst () {
speedtest --share > speed
}
print_premium_header
echo -e "${NEON_BLUE}${GLOBE} ${WHITE}MAPTECH GLOBAL ${GOLD}${DIAMOND} ${WHITE}NETWORK PERFORMANCE ANALYZER ${GOLD}${DIAMOND} ${NEON_BLUE}${GLOBE}${RESET}"
echo ""
aguarde 'fun_tst'
echo ""
png=$(cat speed | sed -n '5 p' |awk -F : {'print $NF'})
down=$(cat speed | sed -n '7 p' |awk -F :  {'print $NF'})
upl=$(cat speed | sed -n '9 p' |awk -F :  {'print $NF'})
lnk=$(cat speed | sed -n '10 p' |awk {'print $NF'})
echo -e "${NEON_PURPLE}╔══════════════════════════════════════════════════════════╗${RESET}"
echo -e "${NEON_PURPLE}║${BG_DARK}${GOLD} ${LIGHTNING} LATENCY: ${WHITE}$png                                    ${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}║${BG_DARK}${NEON_GREEN} ${ARROW} DOWNLOAD: ${WHITE}$down                                  ${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}║${BG_DARK}${NEON_PINK} ${ARROW} UPLOAD: ${WHITE}$upl                                    ${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}║${BG_DARK}${NEON_BLUE} ${GLOBE} SHARE: ${WHITE}$lnk${RESET}${NEON_PURPLE}║${RESET}"
echo -e "${NEON_PURPLE}╚══════════════════════════════════════════════════════════╝${RESET}"
rm -rf $HOME/speed
}

# Enhanced Limiter Functions
function limit1 () {
   print_premium_header
   echo -e "${NEON_GREEN}${ROCKET} ${WHITE}INITIALIZING MAPTECH USER LIMITER...${RESET}"
   echo ""
   fun_bar 'screen -dmS limiter limiter' 'sleep 3'
   [[ $(grep -wc "limiter" /etc/autostart) = '0' ]] && {
       echo -e "ps x | grep 'limiter' | grep -v 'grep' && echo 'ON' || screen -dmS limiter limiter" >> /etc/autostart
   } || {
       sed -i '/limiter/d' /etc/autostart
	   echo -e "ps x | grep 'limiter' | grep -v 'grep' && echo 'ON' || screen -dmS limiter limiter" >> /etc/autostart
   }
   echo -e "${NEON_GREEN}${CHECK_MARK} ${WHITE}USER LIMITER ACTIVATED SUCCESSFULLY!${RESET}"
   sleep 3
   menu
}

function limit2 () {
   print_premium_header
   echo -e "${RED}${CROSS_MARK} ${WHITE}DEACTIVATING USER LIMITER...${RESET}"
   echo ""
   fun_stplimiter () {
      sleep 1
      screen -r -S "limiter" -X quit
      screen -wipe 1>/dev/null 2>/dev/null
      [[ $(grep -wc "limiter" /etc/autostart) != '0' ]] && {
          sed -i '/limiter/d' /etc/autostart
      }
      sleep 1
   }
   fun_bar 'fun_stplimiter' 'sleep 3'
   echo -e "${RED}${CROSS_MARK} ${WHITE}USER LIMITER DEACTIVATED!${RESET}"
   sleep 3
   menu
}

function limit_ssh () {
[[ $(ps x | grep "limiter"|grep -v grep |wc -l) = '0' ]] && limit1 || limit2
}

function autoexec () {
   if grep "menu;" /etc/profile > /dev/null; then
      print_premium_header
      echo -e "${ORANGE}${GEAR} ${WHITE}DISABLING AUTO-EXECUTION SYSTEM${RESET}"
      offautmenu () {
         sed -i '/menu;/d' /etc/profile
      }
      echo ""
      fun_bar 'offautmenu'
      echo ""
      echo -e "${RED}${CROSS_MARK} ${WHITE}AUTO-EXECUTION DISABLED!${RESET}"
      sleep 1.5s
      menu2
   else
      print_premium_header
      echo -e "${NEON_GREEN}${GEAR} ${WHITE}ENABLING AUTO-EXECUTION SYSTEM${RESET}"
      autmenu () {
         grep -v "^menu;" /etc/profile > /tmp/tmpass && mv /tmp/tmpass /etc/profile
         echo "menu;" >> /etc/profile
      }
      echo ""
      fun_bar 'autmenu'
      echo ""
      echo -e "${NEON_GREEN}${CHECK_MARK} ${WHITE}AUTO-EXECUTION ENABLED!${RESET}"
      sleep 1.5s
      menu2
   fi
}

