    echo -e "${ELECTRIC_BLUE}│${BG_DARK}${WHITE}                 ${INFO} Telegram: ${NEON_BLUE}@maptechgh ${WHITE}${INFO} 24/7 Support                    ${RESET}${ELECTRIC_BLUE}│${RESET}"
    echo -e "${ELECTRIC_BLUE}│${BG_DARK}${GOLD}                ${HEART} Professional VPS Management Solutions ${HEART}                ${RESET}${ELECTRIC_BLUE}│${RESET}"
    echo -e "${ELECTRIC_BLUE}└────────────────────────────────────────────────────────────────────┘${RESET}"
}

#menu2 - Advanced Options
