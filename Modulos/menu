# Advanced Progress Bar
fun_bar () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
[[ ! -e /usr/lib/vpsmanager ]] && rm -rf /bin/menu > /dev/null 2>&1
${comando[0]} -y > /dev/null 2>&1
${comando[1]} -y > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "${NEON_BLUE}${LIGHTNING} ${WHITE}Processing ${NEON_PURPLE}${DOUBLE_ARROW} ${CYAN}["
while true; do
   for((i=0; i<30; i++)); do
   echo -ne "${NEON_GREEN}█"
   sleep 0.06s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "${CYAN}]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "${NEON_BLUE}${LIGHTNING} ${WHITE}Processing ${NEON_PURPLE}${DOUBLE_ARROW} ${CYAN}["
done
echo -e "${CYAN}] ${NEON_GREEN}${CHECK_MARK} ${WHITE}COMPLETED${RESET}"
tput cnorm
}

IP=$(cat /etc/IP)
x="ok"

